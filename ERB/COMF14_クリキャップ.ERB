	A = 40
ELSEIF ABL:0 == 1
	A = 120
ELSEIF ABL:0 == 2
	A = 250
ELSEIF ABL:0 == 3
	A = 450
ELSEIF ABL:0 == 4
	A = 600
ELSE
	A = 750
ENDIF

