ELSEIF ABL:10 == 1
	TIMES A , 0.90
ELSEIF ABL:10 == 2
	TIMES A , 1.00
ELSEIF ABL:10 == 3
	TIMES A , 1.10
ELSEIF ABL:10 == 4
	TIMES A , 1.20
ELSE
	TIMES A , 1.30
ENDIF

SOURCE:0 += A
SOURCE:11 += 50
SOURCE:12 += 50

