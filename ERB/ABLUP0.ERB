;C 감각 LvUP 판정
;-------------------------------------------------
@DECIDE_ABLUP0
#DIM CALC
#DIM LCOUNT
;各部位感覚封鎖
CALC = 0
SIF TALENT:103 & 2
	CALC ++
SIF TALENT:105 & 2
	CALC ++
SIF TALENT:107 & 2
	CALC ++

;C감각은 Lv5가 상한이나 、[자위광]이 붙어 있는 경우엔 Lv10까지 해방
SIF ABL:0 >= 5 && TALENT:74 == 0
	RETURN 0
SIF ABL:0 >= CALC * 5 + 10
	RETURN 0
;感覚封鎖されている場合は不可
SIF TALENT:101 & 2
	RETURN 0

;판정 변수를 空に
A = 0
I = 0

IF ABL:0 == 0
	A = 1
ELSEIF ABL:0 == 1
	A = 20
ELSEIF ABL:0 == 2
	A = 400
ELSEIF ABL:0 == 3
	A = 8000
ELSEIF ABL:0 == 4
	A = 20000
ELSEIF ABL:0 == 5
	A = 40000
ELSEIF ABL:0 == 6
	A = 60000
ELSEIF ABL:0 == 7
	A = 90000
ELSEIF ABL:0 == 8
	A = 120000
ELSEIF ABL:0 == 9
	A = 180000
ELSEIF ABL:0 < 15
	A = 180000
	FOR LCOUNT, 0, (ABL:0 - 9)
		A = A * 125 / 100
	NEXT
ELSEIF ABL:0 < 20
	A = 362000
	FOR LCOUNT, 0, (ABL:0 - 14)
		A = A * 120 / 100
	NEXT
ELSEIF ABL:0 < 25
	A = 583000
	FOR LCOUNT, 0, (ABL:0 - 19)
		A = A * 115 / 100
	NEXT
ENDIF

;일선넘지않음
IF TALENT:27
	SIF ABL:0 == 4
		TIMES A , 2.00
	SIF ABL:0 == 5
		TIMES A , 2.50
	SIF ABL:0 >= 6
		TIMES A , 3.00
ENDIF

;Ｃ둔감
SIF TALENT:101
	TIMES A , 1.20

;Ｃ민감
SIF TALENT:102
	TIMES A , 0.80

;他部位の封鎖数
IF ABL:0 > 5 && ABL:0 <= 10 && CALC > 0
	A = A * (15 - CALC) / 15
ELSEIF ABL:0 <= 15 && CALC > 1
	A = A * (16 - CALC) / 15
ELSEIF ABL:0 <= 20 && CALC > 2
	A = A * (17 - CALC) / 15
ENDIF

;음란
SIF TALENT:76
	TIMES A , 0.80
;자위광
SIF TALENT:74
	TIMES A , 0.80

;최소한 1개는 필요
SIF A < 1
	A = 1

;쾌Ｃ의 구슬로 올리다
SIF JUEL:0 < A
	I |= 1

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

