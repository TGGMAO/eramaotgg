A = 300

;PALAM:恐怖をみる
IF PALAM:10 < PALAMLV:1
	TIMES A , 1.00
ELSEIF PALAM:10 < PALAMLV:2
	TIMES A , 1.10
ELSEIF PALAM:10 < PALAMLV:3
	TIMES A , 1.20
ELSEIF PALAM:10 < PALAMLV:4
	TIMES A , 1.30
ELSEIF PALAM:10 >= PALAMLV:4
	TIMES A , 1.40
ENDIF

;ABL:マゾっ気をみる
IF ABL:21 == 0
	SOURCE:11 += 0
	SOURCE:10 += 0
	SOURCE:15 += 100
	TIMES A, 0.60
ELSEIF ABL:21 == 1
	SOURCE:11 += 50
	SOURCE:10 += 150
	SOURCE:15 += 0
	TIMES A, 1.00
ELSEIF ABL:21 == 2
	SOURCE:11 += 100
	SOURCE:10 += 300
	SOURCE:15 += 0
	TIMES A, 1.60
ELSEIF ABL:21 == 3
	SOURCE:11 += 150
	SOURCE:10 += 600
	SOURCE:15 += 0
ELSEIF ABL:21 == 4
	SOURCE:11 += 200
	SOURCE:10 += 1000
	SOURCE:15 += 0
ELSEIF ABL:21 >= 5
	SOURCE:11 += 300
	SOURCE:10 += 2000
	SOURCE:15 += 0
ENDIF

;ASSIのABL:サドっ気をみる
IF ABL:ASSI:20 == 0
	TIMES A , 0.20
ELSEIF ABL:ASSI:20 == 1
	TIMES A , 0.50
ELSEIF ABL:ASSI:20 == 2
	TIMES A , 1.00
ELSEIF ABL:ASSI:20 == 3
	TIMES A , 1.50
ELSEIF ABL:ASSI:20 == 4
	TIMES A , 2.50
ELSEIF ABL:ASSI:20 >= 5
	TIMES A , 3.00
ENDIF

