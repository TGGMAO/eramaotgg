@ENTER_ENEMY,ARG:0
#DIM CHARA, 1
;매월 월말에 내습
;ARG:0 = 0 通常
;ARG:0 = キャラNo 知り合い・家族確定エントリー

LOCAL = 10

;FLAG:60 = 勇者基礎レベル補正
;SIF DAY:2 > LOCAL && ARG:0 == 0 && FLAG:60 < 300
;	RETURN 0

;リリィ出現
SIF ARG:0 == 0 || TALENT:(ARG:0):마을처녀Ａ
	CALL K_11_LILY


;キャラが多すぎる場合中断
IF DAY <= 200 && CHARANUM > 200
	RETURN 0
ELSEIF DAY <= 400 && CHARANUM > 200
	RETURN 0
ELSEIF DAY <= 600 && CHARANUM > 200
	RETURN 0
ELSEIF DAY <= 1000 && CHARANUM > 200
	RETURN 0
ENDIF

;キャラのNOを選定 
CHARA = RAND(1, 17) + RAND(2)*30
;GETCHARA(케릭터 번호, SP플래그)에서 케릭터가 존재하지 않으면-1
;CFLAG:0이 0らば登録番号を返す. CFLAG:0が1=매각 가능　2=조수可ならば-1が返るので同じキャラ番号のキャラが攻めてくる. 
IF RAND(2) == 1
	
	IF ARG:0 > 0
		LOCAL = 0
		ADDCHARA CHARA
		A = CHARANUM - 1
		CALL CHAR_MAKE,998,ARG:0
	ELSE
		;이국의 용사에 대한 판정
		CALL CHAR_MAKE_INPORT
		IF RESULT == 0
			LOCAL = 0
			ADDCHARA CHARA
			A = CHARANUM - 1
			CALL CHAR_MAKE
		ELSE
			LOCAL = 1
		ENDIF
	ENDIF
	PRINTL *****************************************
	SIF LOCAL
		PRINT 이국의 
	PRINT 용사 
	PRINTS SAVESTR:RESULT
	PRINTL (이)가 던전 공략을 개시했다! 
	PRINTL *****************************************
	WAIT
	;용사 LVUP
	IF FLAG:5 & 2
		FLAG:60 += 1
		PRINTFORMW 용사 기초 레벨 보정이 {FLAG:60}(이)가 되었습니다
	ENDIF
ELSE
	PRINTL 마왕에 대한 공포 때문인지,  용사는 나타나지 않았다
	WAIT
	RETURN 0
ENDIF
PRINTL  
A = RESULT

;카르마 조정
SIF CFLAG:A:151 < -100
	CFLAG:A:151 = -100

CALL ENTERENEMY_KOUJO

;초기 좌표

;座標について…このXY座標は2Dマップモードで使用する座標ですが, 現在は死んでいる変数です
;気が変わったときのために残しています

LOCAL:0 = RAND:32
LOCAL:1 = RAND:32

IF RAND:4 == 0
	LOCAL:0 = 0
ELSEIF RAND:3 == 0
	LOCAL:1 = 0
ELSEIF RAND:2 == 0
	LOCAL:0 = 31
ELSE
	LOCAL:1 = 31
ENDIF

CFLAG:A:510 = LOCAL:0
CFLAG:A:511 = LOCAL:1

;初期座標設定終わり

IF GETBIT(FLAG:8, 1)
	PRINTL
	CALL SHOW_CHARA_INFO, A
	PRINTL
ENDIF

RETURN 1



