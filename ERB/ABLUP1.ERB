;-------------------------------------------------
;Ｂ감각의 LvUP 여부 판정
;-------------------------------------------------
@DECIDE_ABLUP1
#DIM CALC
#DIM LCOUNT
;各部位感覚封鎖
CALC = 0
SIF TALENT:101 & 2
	CALC ++
SIF TALENT:103 & 2
	CALC ++
SIF TALENT:105 & 2
	CALC ++

;Ｂ감각은 Lv5가 상한、[음유]를 가지고 있는 경우 Lv10까지 해방
SIF ABL:1 >= 5 && TALENT:78 == 0
	RETURN 0
SIF ABL:1 >= CALC * 5 + 10
	RETURN 0
;感覚封鎖されている場合は不可
SIF TALENT:107 & 2
	RETURN 0

;판정 변수를 하늘로
A = 0
I = 0

IF ABL:1 == 0
	A = 1
ELSEIF ABL:1 == 1
	A = 20
ELSEIF ABL:1 == 2
	A = 400
ELSEIF ABL:1 == 3
	A = 8000
ELSEIF ABL:1 == 4
	A = 20000
ELSEIF ABL:1 == 5
	A = 40000
ELSEIF ABL:1 == 6
	A = 60000
ELSEIF ABL:1 == 7
	A = 90000
ELSEIF ABL:1 == 8
	A = 120000
ELSEIF ABL:1 == 9
	A = 180000
ELSEIF ABL:1 < 15
	A = 180000
	FOR LCOUNT, 0, (ABL:1 - 9)
		A = A * 125 / 100
	NEXT
ELSEIF ABL:1 < 20
	A = 362000
	FOR LCOUNT, 0, (ABL:1 - 14)
		A = A * 120 / 100
	NEXT
ELSEIF ABL:1 < 25
	A = 583000
	FOR LCOUNT, 0, (ABL:1 - 19)
		A = A * 115 / 100
	NEXT
ENDIF

;일선넘지않음
IF TALENT:27
	SIF ABL:1 == 4
		TIMES A , 2.00
	SIF ABL:1 == 5
		TIMES A , 2.50
	SIF ABL:1 >= 6
		TIMES A , 3.00
ENDIF

;B둔감
SIF TALENT:107
	TIMES A , 1.20
;거유
SIF TALENT:110
	TIMES A , 1.10
;폭유
SIF TALENT:114
	TIMES A , 1.20

;超乳
SIF TALENT:119
	TIMES A , 1.30

;B민감
SIF TALENT:108
	TIMES A , 0.80

;他部位の封鎖数
IF ABL:1 > 5 && ABL:1 <= 10 && CALC > 0
	A = A * (15 - CALC) / 15
ELSEIF ABL:1 <= 15 && CALC > 1
	A = A * (16 - CALC) / 15
ELSEIF ABL:1 <= 20 && CALC > 2
	A = A * (17 - CALC) / 15
ENDIF

;음란
SIF TALENT:76
	TIMES A , 0.80
;음유
SIF TALENT:78
	TIMES A , 0.80
;빈유
SIF TALENT:109
	TIMES A , 0.80
;절벽
SIF TALENT:116
	TIMES A , 0.65

;최소한 1개는 필요함
SIF A < 1
	A = 1

;쾌Ｂ의 구슬로 올립니까？
SIF JUEL:14 < A
	I |= 1

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

