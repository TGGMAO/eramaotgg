SIF C > 0
	PRINTFORML 　　　%PALAMNAME:6%의 구슬×{JUEL:6}/{C}
PRINTFORML 　　　%EXPNAME:40%　{EXP:40}/{B}

;快Ｃ의 구슬で上げる場合
IF D > 0
	PRINTFORM [1] - %PALAMNAME:0%의 구슬×{JUEL:0}/{D} ……
	IF J == 0
		PRINT ＯＫ
	ELSE
		SIF J & 1
			PRINT 구슬 부족 
		SIF J & 2
			PRINT 경험 부족 
		SIF J & 4
			PRINT 능력 부족 
	ENDIF
	PRINTL 
	PRINTFORML 　　　%EXPNAME:40%　{EXP:40}/{B}
ENDIF

PRINTL [100] - 그만둔다


INPUT
IF (RESULT < 0 || RESULT > 1) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 조건을 만족하지 못했습니다
	RESTART
ELSEIF J == 256 && RESULT == 1
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 조건을 만족하지 못했습니다
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:22 += 1

IF RESULT == 0
	JUEL:5 -= A
	JUEL:6 -= C
ELSEIF RESULT == 1
	JUEL:0 -= D
ENDIF

PRINTFORML %ABLNAME:22%의 레벨이 {ABL:22}으로 되었습니다

