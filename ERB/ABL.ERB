REPEAT 40
	SIF COUNT >= 4 && COUNT <=9
		CONTINUE
	SIF COUNT >= 18 && COUNT <= 19
		CONTINUE
	SIF COUNT >= 24 && COUNT <= 29
		CONTINUE
	SIF COUNT >= 34 && COUNT <= 36
		CONTINUE
	SIF COUNT == 38
		CONTINUE

	;남성은 V감각과 레즈끼, 레즈중독이 상승하지 않는다.
	SIF TALENT:122 && (COUNT == 2 || COUNT == 22 || COUNT == 33)
		CONTINUE
	;여성은 BL끼와 BL중독이 상승하지 않는다.
	SIF TALENT:122 == 0 && (COUNT == 23 || COUNT == 34)
		CONTINUE
	X = COUNT
	PRINTPLAIN  
	IF X == 0 && TALENT:101 & 2
		SETCOLOR 128, 128, 128
		PRINT [―]
	ELSEIF X == 1 && TALENT:107 & 2
		SETCOLOR 128, 128, 128
		PRINT [―]
	ELSEIF X == 2 && TALENT:103 & 2
		SETCOLOR 128, 128, 128
		PRINT [―]
	ELSEIF X == 3 && TALENT:105 & 2
		SETCOLOR 128, 128, 128
		PRINT [―]
	ELSE
		PRINTFORM [{X, 2}]
	ENDIF
	PRINTFORM %ABLNAME:X%
	;문자 정렬 두번째
	IF X <= 3 || X == 17
		PRINT   
	ELSEIF (X >= 10 && X <= 12) || X == 15
		PRINT     
	ENDIF	
	PRINTFORM -{ABL:X}LV
	CALL DECIDE_ABLUP
	RESETCOLOR
	U += 1
	IF U % 4 == 0
		PRINTL 
	ENDIF
