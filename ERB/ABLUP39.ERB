;수간 중독의 LvUP 처리와 그 여부 판정
;eraIm@s_ver.0.17βdのスクリプトをベースに処理を簡略化
;eraIM@Sから導入しました(eramaou)

;-------------------------------------------------
;수간 중독의 LvUP
;-------------------------------------------------
@ABLUP39
DRAWLINE
;PRINTL 노예의 수간에 대한 집착심을 높입니다
;PRINTL 수간 중독이 높아지면 동물과의 섹스나 봉사 행위에 대한 만족감이 깊어져、
;PRINTL 자주 동물을 상대로 성 행위를 하지 않으면 마음이 가라앉지 않게 됩니다
;PRINTL ‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥‥
;수간 중독은 Lv5가 상한
;[음란][동물귀][암캐]가 붙어 있는 경우엔 Lv10까지 해방
IF ABL:39 >= 5 && (TALENT:76 == 0 && TALENT:124 == 0 && TALENT:136 == 0)
	PRINTW 이 이상 UP 하려면 소질이 필요합니다
	RETURN 0
ELSEIF ABL:39 >= 10
	PRINTW 이미 MAX입니다
	RETURN 0
;정액중독＋레즈중독＋獣姦中毒は11이상にならない
ELSEIF ABL:32 + ABL:33 + ABL:39 >= 10
	PRINTFORMW 정액 중독({ABL:32})＋레즈 중독({ABL:33})＋수간 중독({ABL:39})의 상한은 10입니다
	RETURN 0
ENDIF

;必要な欲情의 구슬
A = 0
;必要な屈服의 구슬
B = 0
;必要な獣姦経験
C = 0
;必要な異常経験回数
F = 0

CALL DECIDE_ABLUP39

;上げるときは異常経験必要（素質：[음란][중독되기쉬움]なら無視できる）
SIF F > 0
	PRINTFORML %EXPNAME:50%{F}이상(현재{EXP:50})동시에

;欲望が必要
PRINTFORML %ABLNAME:11%{ABL:39 + 1}LV이상(현재{ABL:11}LV)동시에

PRINTFORM [0] - %PALAMNAME:5%의 구슬×{JUEL:5}/{A} ……
IF I == 0
	PRINT ＯＫ
ELSE
	SIF I & 1
		PRINT 구슬 부족 
	SIF I & 2
		PRINT 경험 부족 
	SIF I & 4
		PRINT 능력 부족 
ENDIF
PRINTL 
PRINTFORML 　　　%PALAMNAME:6%의 구슬×{JUEL:6}/{B}
PRINTFORML 　　　%EXPNAME:56%　{EXP:56}/{C}
PRINTL [100] - 그만둔다

INPUT
IF (RESULT < 0 || RESULT > 0) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 조건을 만족하지 못했습니다
	RESTART
ELSEIF RESULT == 100
	RETURN 0
ENDIF

ABL:39 += 1
IF RESULT == 0
	JUEL:5 -= A
	JUEL:6 -= B
ENDIF

PRINTFORML %ABLNAME:39%의 레벨이 {ABL:39}으로 되었습니다

RETURN 0

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@DECIDE_ABLUP39
;獣姦中毒はLv5が上限
;[음란][동물귀][암캐]が付いている場合はLv10まで解放
SIF ABL:39 >= 10
	RETURN 0
SIF ABL:39 >= 5 && (TALENT:76 == 0 && TALENT:124 == 0 && TALENT:136 == 0)
	RETURN 0
;정액중독＋레즈중독＋獣姦中毒は11이상にならない
SIF ABL:32 + ABL:33 + ABL:39 >= 10
	RETURN 0

;条件別にＯＫかダメかを記録する
I = 0

IF ABL:39 == 0
	A = 2000
	B = 2000
	C = 30
ELSEIF ABL:39 == 1
	A = 5000
	B = 5000
	C = 100
ELSEIF ABL:39 == 2
	A = 10000
	B = 10000
	C = 220
ELSEIF ABL:39 == 3
	A = 20000
	B = 20000
	C = 400
ELSEIF ABL:39 == 4
	A = 30000
	B = 30000
	C = 800
ELSEIF ABL:39 == 5
	A = 45000
	B = 45000
	C = 1600
ELSEIF ABL:39 == 6
	A = 75000
	B = 75000
	C = 2000
ELSEIF ABL:39 == 7
	A = 100000
	B = 100000
	C = 2800
ELSEIF ABL:39 == 8
	A = 200000
	B = 200000
	C = 4000
ELSEIF ABL:39 == 9
	A = 300000
	B = 300000
	C = 6000
ENDIF

;일선넘지않음
IF TALENT:27
	IF ABL:37 == 3
		TIMES A , 2.00
		TIMES B , 2.00
		TIMES C , 2.00
	ELSEIF ABL:37 == 4
		TIMES A , 2.50
		TIMES B , 2.50
		TIMES C , 2.50
	ELSEIF ABL:37 >= 5
		TIMES A , 3.00
		TIMES B , 3.00
		TIMES C , 3.00
	ENDIF
ENDIF

F = 0
;２이상に上げるときは異常経験必要（素質：[중독되기쉬움][음란][암캐]なら無視できる）
SIF ABL:39 >= 2 && (TALENT:72 == 0 && TALENT:76 == 0 && TALENT:136 == 0)
		F = ABL:39 + 1

;자제심
IF TALENT:20
	TIMES A , 2.50
	TIMES B , 2.50
	TIMES C , 1.50
ENDIF
;쾌감에솔직
IF TALENT:70
	TIMES A , 0.75
	TIMES B , 0.75
;쾌감을부정
ELSEIF TALENT:71
	TIMES A , 1.75
	TIMES B , 1.75
ENDIF
;중독되기쉬움
IF TALENT:72
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;도착적
IF TALENT:80
	TIMES A , 0.75
	TIMES B , 0.75
	TIMES C , 0.75
ENDIF
;광기
IF TALENT:123
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;동물귀
IF TALENT:124
	TIMES A , 0.80
	TIMES B , 0.80
	TIMES C , 0.80
ENDIF
;암캐
IF TALENT:136
	TIMES A , 0.50
	TIMES B , 0.50
	TIMES C , 0.50
ENDIF
;애정(心が主人に向いているので獣になびきにくい)
IF TALENT:85
	TIMES A , 1.80
	TIMES B , 1.80
	TIMES C , 1.50
ENDIF

;最低でも１回・１個は必要
SIF A < 1
	A = 1
SIF B < 1
	B = 1
SIF C < 1
	C = 1

;欲望が必要
SIF ABL:11 < ABL:39 + 1
	I |= 4
;欲情의 구슬は足りている？
SIF JUEL:5 < A
	I |= 1
;屈服의 구슬は足りている？
SIF JUEL:6 < B
	I |= 1

;獣姦経験は足りている？
SIF EXP:56 < C
	I |= 2
;異常経験は足りている？
SIF EXP:50 < F
	I |= 2

IF I == 0
	RETURN 1
ELSE
	RETURN 0
ENDIF

